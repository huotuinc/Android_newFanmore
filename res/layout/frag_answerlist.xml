<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlAnswerlist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp" 
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="@drawable/dt">
    <com.android.volley.toolbox.NetworkImageView 
        android:id="@+id/imgPic"
        android:layout_width="300dp"
        android:layout_height="140dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:background="@color/mark_blue"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:contentDescription="@null"/>  
          
    <TextView 
        android:id="@+id/txtNo"
        android:layout_width="match_parent"        
        android:layout_height="wrap_content"
        android:layout_below="@id/imgPic"      
        android:textSize="18sp"  
        android:text="(1/6)问题问题标我我我我标题问题标我我我我我我我我我我我我我我我题问题标题问我我我我我我题标题问题标题我我我"/>      
    <RelativeLayout 
        android:id="@+id/rlQuestion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:layout_below="@id/txtNo">         
    <FrameLayout 
        android:id="@+id/llA"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
    <Button 
        android:id="@+id/btnA"
        android:paddingLeft="40dp"
        android:gravity="center_horizontal|center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/a"  
        /> 
      <ImageView
        android:id="@+id/gifPicA"
        android:layout_width="60dp"
        android:layout_gravity="right"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_marginRight="1dp"
        android:layout_height="wrap_content">          
      </ImageView>     
    </FrameLayout>
    <FrameLayout 
        android:id="@+id/llB"
        android:layout_below="@id/llA"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">
    <Button 
        android:id="@+id/btnB"
        android:paddingLeft="40dp"
        android:gravity="center_horizontal|center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/b" />
    <ImageView
        android:id="@+id/gifPicB"
        android:layout_gravity="right"
        android:layout_width="60dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_marginRight="1dp"
        android:layout_height="wrap_content"></ImageView>  
    </FrameLayout>
    <FrameLayout 
        android:id="@+id/llC"       
        android:layout_below="@id/llB"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">
    <Button 
        android:id="@+id/btnC"
        android:paddingLeft="40dp"
        android:gravity="center_horizontal|center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/c"  />
    <ImageView
        android:id="@+id/gifPicC"
        android:layout_gravity="right"
        android:layout_width="60dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_marginRight="1dp"
        android:layout_height="wrap_content"></ImageView>  
    </FrameLayout>
    <FrameLayout 
        android:id="@+id/llD"
        android:layout_below="@id/llC"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="4dp" 
        android:orientation="horizontal">
    <Button 
        android:id="@+id/btnD"
        android:paddingLeft="40dp"
        android:text=""
        android:background="@drawable/d" 
        android:gravity="center_horizontal|center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/gifPicD"
        android:layout_gravity="right"
        android:layout_width="60dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_marginRight="1dp"
        android:layout_height="wrap_content"></ImageView>  
    </FrameLayout>
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/rlWaiting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"></RelativeLayout>
</RelativeLayout>
