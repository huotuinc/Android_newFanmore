<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_title_height" 
        style="@style/TitleStyle">

        <cy.com.morefan.view.CyButton
            android:id="@+id/btnBack"
            android:layout_width="@dimen/title_back_width"
            android:layout_height="@dimen/title_back_height"
            android:layout_marginTop="5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/title_back"
            android:onClick="onClickButton" />

        <TextView
            android:id="@+id/backImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/btnBack"
            android:layout_marginRight="10dp"
            android:textColor="@color/txt_title"
            android:textSize="@dimen/main_title_text_size"
            android:text="保存"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btnBack"
            android:layout_centerHorizontal="true"
            android:text="@string/app_name"
            android:textColor="@color/txt_title"
            android:textSize="@dimen/main_title_text_size" />
        <TextView
            android:id="@+id/backtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btnBack"
            android:layout_alignBottom="@+id/btnBack"
            android:layout_toRightOf="@+id/btnBack"
            android:text=" 返回" 
            android:textColor="@color/click_txt_title"
            android:textSize="@dimen/main_title_text_size"
            android:textStyle="normal"/>

    </RelativeLayout>
    
</merge>

